
<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        TabbedPanel:
            size_hint: .5, .5
            pos_hint: {'center_x': .5, 'center_y': .5}
            do_default_tab: False
            TabbedPanelItem:
                text: 'Login Page'
                GridLayout:
                    orientation: 'vertical'
                    cols: 1
                    Label:
                        id: wel
                        text: 'Welcome'
                        size_hint_y: None
                        height: 30
                    GridLayout:
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        cols: 2
                        Label:
                            size_hint_y: None
                            height: 70
                            text: 'User Name'
                        TextInput:
                            id: user
                            font_size: 50
                            size_hint_y: None
                            height: 70
                            multiline: False
                        Label:
                            size_hint_y: None
                            height: 70
                            text: 'Password'
                        TextInput:
                            id: pwd
                            font_size: 50
                            size_hint_y: None
                            height: 70
                            multiline: False
                            password: True
                        Button:
                            size_hint_y: None
                            height: 40
                            text: 'Sign Up'
                            on_release: root.manager.current = 'signup'
                        Button:
                            id: sign_in
                            size_hint_y: None
                            height: 40
                            text: 'Sign In'
                            on_release: root.log_prof(user.text,pwd.text,wel,sign_in)
            TabbedPanelItem:
                text: 'Main Page'
                GridLayout:
                    padding: [3,3,3,3]
                    cols: 1
                    Label:
                        text: 'Welcome '+user.text
                        size_hint_y: None
                        height: 20
                    GridLayout:
                        padding: [15,15,15,15]
                        size_hint_y: 0.3
                        cols: 1
                        Button:
                            id: server_but
                            size_hint_y: 0.2
                            text: 'Start server'
                            on_release: root.start_server(server_but,server_text)
                        TextInput:
                            text: 'Press above Button to Host attendance website'
                            size_hint_y: 0.8
                            id: server_text
                    GridLayout:
                        padding: [15,15,15,15]
                        cols: 1
                        size_hint_y: 0.7
                        Label:
                            id: students_lab
                            size_hint_y: 0.1
                            text: 'Students Details'
                        TextInput:
                            text: 'No one has yet given attendance'
                            size_hint_y: 0.9
                            id: students_text


<Signupscreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'SignUp Page'
            size_hint_y: None
            height: 20
        Label:
            size_hint_y: None
            height: 110
        GridLayout:
            cols: 2
            Label:
                text: 'Username'
                size_hint_y: None
                height: 35
            TextInput:
                id: user
                text:
                size_hint_y: None
                height: 25
                font_size: 20
            Label:
                text: 'Password'
                size_hint_y: None
                height: 35
            TextInput:
                id: pwd
                text:
                size_hint_y: None
                height: 25
                font_size: 20
            Label:
                text: 'Subjet Name'
                size_hint_y: None
                height: 35
            TextInput:
                id: subname
                text:
                size_hint_y: None
                height: 25
                font_size: 20

        Button:
            id: reg_but
            text: 'Register'
            size_hint_y: None
            size_hint_x: .5
            pos_hint: {'center_x': .5}
            height: 50
            on_release: root.register_prof(user.text,pwd.text,subname.text,msgbox,reg_but)
        Label:
            id: msgbox
            size_hint_y: None
            height: 110

        Button:
            text: '<< Go back'
            size_hint_y: None
            height: 30
            on_release: root.manager.current = 'main'
